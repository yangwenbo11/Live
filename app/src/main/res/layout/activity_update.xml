<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/nickname_tv_upd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"/>

    <EditText
        android:id="@+id/nickName_et_upd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/nickname_tv_upd"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/icon_upd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon_upd_sdv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            fresco:actualImageScaleType="centerInside"
            fresco:roundAsCircle="true"
            android:layout_toRightOf="@id/icon_upd_tv"
            android:layout_marginLeft="20dp"
            fresco:roundingBorderWidth="1dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_tv_upd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人签名"/>

        <EditText
            android:id="@+id/sign_et_upd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sign_tv_upd"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/update_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="完成"/>

</LinearLayout>